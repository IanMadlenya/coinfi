  = f.input :title
  = f.input :summary, label_html: {class: 'has-tooltip help', title: 'Summarize your articleâ€™s key points in bullet points'}
  = f.input :content, label_html: {class: 'has-tooltip help', title: 'Please include links in parenthesis'}, input_html: {rows: 20}
